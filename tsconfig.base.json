{
  "compilerOptions": {
    "outDir": "out",
    "target": "es2021",
    "lib": ["ES2021"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "baseUrl": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "out"]
}
