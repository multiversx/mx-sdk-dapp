    },
    {
      "path": "dist/dapp-core.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@elrondnetwork/erdjs": "10.2.5",
    "@elrondnetwork/erdjs-extension-provider": "2.0.1",
    "@elrondnetwork/erdjs-hw-provider": "2.0.1",
