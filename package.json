    "size-limit": "7.0.8",
    "tsdx": "0.14.1",
    "tslib": "2.4.0",
    "typescript": "4.7.3"
  },
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "elrond",
    "blockchain",
    "dapp",
    "smart-contract",
    "transaction"
  ],
  "peerDependencies": {
    "react": ">=18"
  },
  "resolutions": {
    "@types/react": "18.0.10",
    "@types/react-dom": "18.0.5"
  },
  "optionalDependencies": {
    "@fortawesome/fontawesome-svg-core": "6.1.0",
    "@fortawesome/free-solid-svg-icons": "6.1.0",
